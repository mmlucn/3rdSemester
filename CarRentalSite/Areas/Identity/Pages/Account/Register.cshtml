@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row m-1">
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Input.Firstname" class="form-control" aria-required="true" />
                        <label asp-for="Input.Firstname"></label>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Lastname" class="form-control" aria-required="true" />
                        <label asp-for="Input.Lastname"></label>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Input.Address" class="form-control" aria-required="true" />
                        <label asp-for="Input.Address"></label>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.CPR" class="form-control" aria-required="true" />
                        <label asp-for="Input.CPR"></label>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Birthday" class="form-control" aria-required="true" />
                        <label asp-for="Input.Birthday"></label>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
                        <label asp-for="Input.PhoneNumber"></label>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.ProfilePicture" class="form-control" aria-required="false" />
                        <label asp-for="Input.ProfilePicture"></label>
                    </div>
                </div>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
